# Rule for applying cutflow
rule apply_cutflow:
    input: davinci_output_file_name
    params: config['cutflow']['muon_PT']
    output: cutflow_output_file_name
    shell: "cd scripts && root -q 'applycutflow.C(\"{input}\", {params}, \"{output}\")'"

# Rules for charting
chart_configs_tags = ['Z_MM', 'muon_PT', 'muon_ProbNNmu', 'muon_Rapidity', 'muon_Rapidity_sum', 'muon_PT_sum']

wildcard_constraints:
    config_charts = "|".join(chart_configs_tags)

rule draw_chart:
    input: 
        config_chart = make_histogram_config_file_name("{config_charts}")
    output:
        chart = make_histogram_output_file_name("{config_charts}")
    shell: "cd scripts && root -q 'draw.C(\"{cutflow_output_file_name}\", \"{input.config_chart}\")'"

rule run_all:
    input: expand(make_histogram_output_file_name("{config}"), config=chart_configs_tags)